<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="click"
            type="com.example.servivet.ui.main.view_model.BookingCancelledViewModel.ClickAction" />
        <variable
            name="viewModel"
            type="com.example.servivet.ui.main.view_model.BookingCancelledViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ui.main.bottom_sheet.BookingCancelledBottomSheet">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/topicon"
            android:layout_width="85dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/grey_E5E5E5"
            app:cardCornerRadius="30dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/topicon"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

      <ImageView
          android:layout_width="wrap_content"
          android:background="@drawable/calender_circle_img"
          android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/booking_id"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:textColor="@color/black_2"

        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/_262638"
        android:maxLength="30"
        android:includeFontPadding="false"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="15dp"
        android:textColor="@color/black_2"

        android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/your_booking_has_been_cancelled"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="17dp"
        android:textColor="@color/black_242424"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/your_booking_has_been_cancelled"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        android:textColor="@color/grey_6E6E6E"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/please_track_status_of_refund_under_my_bookings_cancelled"
        android:layout_marginTop="8dp"
        android:includeFontPadding="true"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        android:textColor="@color/grey_6E6E6E"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/savebtn"
        android:layout_below="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:backgroundTint="@null"
        android:visibility="visible"
        android:layout_marginTop="52dp"
        android:background="@drawable/round_corner_grey_12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/go_to_my_bookings"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:backgroundTint="@null" />



</LinearLayout>

    </RelativeLayout>
</layout>
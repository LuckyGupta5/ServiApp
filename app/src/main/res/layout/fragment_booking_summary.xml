<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="click"
            type="com.example.servivet.ui.main.view_model.BookingSummaryViewModel.ClickAction" />
        <variable
            name="viewModel"
            type="com.example.servivet.ui.main.view_model.BookingSummaryViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragment.BookingSummaryFragment">
        <LinearLayout
            android:id="@+id/details_layout"
            app:defaultNavHost="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="55dp">

            <ImageView
                android:layout_width="wrap_content"
                android:onClick="@{click::backbtn}"
                android:layout_height="wrap_content"
                android:background="@drawable/back_detail_btn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="@string/booking_summary"
                android:textColor="@color/black"
                android:textSize="21sp" />
        </LinearLayout>
        <ScrollView
            android:layout_below="@+id/details_layout"
            android:id="@+id/scrollview"
            android:visibility="visible"
            android:scrollbars="none"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_above="@+id/bottomLayout"
            android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:background="@color/grey_F8F8F8"
                    android:layout_height="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/squareImage"
                        android:layout_width="86dp"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="12dp"
                        android:layout_height="86dp">
                        <ImageView
                            android:layout_width="86dp"
                            android:layout_height="86dp"
                            android:background="@drawable/flower_img"/>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/name"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textColor="@color/black_2"
                                android:text="@string/lorem_ipsum_dolor_sit_amet_consetetur_sadipscing_elitr_sed_diam_nonumy_eirmod_tempor_invidunt_ut_labore_et_dolore_magna_aliquyam_erat_sed_diam_voluptua_eos_et_accusam_et_justo_duo_dolores_et_ea_rebum_stet_clita_kasd_gubergren_no_sea_takimata_sanctus_est_lorem_ipsum_dolor_sit_amet_lorem_ipsum_dolor_sit_amet"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_toRightOf="@+id/name"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:background="@drawable/orange_drawable_6dp"
                                android:drawableStart="@drawable/star_img"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="end"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="4dp"
                                android:text="@string/_4_5"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/by_prateek_mehta"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/grey6"
                                android:textSize="14sp" />



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:drawableStart="@drawable/location_pin"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/riepneapps_technology_noida"
                            android:textColor="@color/grey6"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:background="@color/grey_F8F8F8"
                    android:layout_height="5dp"/>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/black_2"
                    android:text="@string/service_mode"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:onClick="@{click::atCenter}"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:drawableStart='@{viewModel.atCenter?@drawable/selectedcircle:@drawable/unselectedcircle}'
            android:fontFamily="@font/poppins_regular"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:text="@string/at_centre"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="@{click::atHome}"
            android:drawableStart='@{viewModel.atHome?@drawable/selectedcircle:@drawable/unselectedcircle}'
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:text="@string/at_home"/>

    </LinearLayout>
</LinearLayout>
                <LinearLayout
                    android:id="@+id/addAddressLayout"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                <View
                    android:id="@+id/view3"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:background="@color/grey_F8F8F8"
                    android:layout_height="5dp"/>

                <LinearLayout
                    android:id="@+id/locationLayout"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="20dp"
                    android:visibility="visible"
                    android:onClick="@{click.gotoaddlocation}"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/location_path_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="17sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black_262626"
                            android:text="@string/add_address"
                            android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/arraow_path"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/changeAddressLayout"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                <View
                    android:id="@+id/changeview3"
                    android:layout_width="match_parent"
                    android:background="@color/grey_F8F8F8"
                    android:layout_height="5dp"/>

                <LinearLayout
                    android:id="@+id/locationLayout2"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="15dp"
                    android:visibility="visible"
                    android:onClick="@{click.gotoaddlocation}"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/location_path_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="17sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:maxLength="30"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black_262626"
                            android:text="@string/abhishek_mehra"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:maxLength="30"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/grey_6E6E6E"
                            android:text="@string/a_192_sector_44_noida"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/changelocation"
                        android:layout_width="wrap_content"
                        android:background="@drawable/apptheme_outline_with_solid_white_corner_12"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="6dp"
                        android:text="@string/change"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:textSize="15sp"
                        android:stateListAnimator="@null"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:visibility="visible"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/app_theme" />
                </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:background="@color/grey_F8F8F8"
                    android:layout_height="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_242424"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="17sp"
                            android:text="@string/at_centre"/>
                        <TextView
                            android:id="@+id/tvDateMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:maxLength="30"
                            android:drawableEnd="@drawable/arrowapptheme"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black_242424"
                            android:drawablePadding="10dp"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/june_2023"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_marginTop="10dp"
                        tools:listitem="@layout/calender_recycler_design"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="17dp"
                            android:textColor="@color/black_242424"
                            android:text="@string/time"
                            android:layout_marginTop="15dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:overScrollMode="never"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/time_recycler"
                            android:layout_marginTop="12dp"
                            android:layout_below="@id/time_txt"
                            android:layout_width="match_parent"
                            tools:listitem="@layout/booking_time_recyclerview_design"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3"/>
                    </RelativeLayout>
                 <!--   <TextView
                        android:id="@+id/noSlotsText"
                        android:visibility="visible"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/by_prateek_mehta"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"/>
-->

                </LinearLayout>
                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:background="@color/grey_F8F8F8"
                    android:layout_height="28dp"/>


            </LinearLayout>



        </ScrollView>
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="20dp"
            android:visibility="visible"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1524"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:textSize="19sp"
                    android:maxLength="8"
                    android:drawablePadding="5dp"
                    android:stateListAnimator="@null"
                    android:backgroundTint="@null"
                    android:drawableStart="@drawable/rupree_icon"
                    app:backgroundTint="@null"
                    android:visibility="visible"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/black_242424"
                    />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/markAsCompletedfd"
                android:layout_width="wrap_content"
                android:background="@drawable/app_theme_color_button_12dp"
                android:layout_height="wrap_content"
                android:text="@string/proceed"
                android:paddingHorizontal="30dp"
                android:textSize="19sp"
                android:onClick="@{click::gotopayment}"
                android:paddingVertical="5dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:visibility="visible"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white" />

        </LinearLayout>



    </RelativeLayout>
</layout>
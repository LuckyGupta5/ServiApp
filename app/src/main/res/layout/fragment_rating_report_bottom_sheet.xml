            name="viewModel"
            type="com.example.servivet.ui.main.view_model.sub_category_models.RatingReportViewModel" />

        <variable
            name="click"
            type="com.example.servivet.ui.main.view_model.sub_category_models.RatingReportViewModel.ClickAction" />


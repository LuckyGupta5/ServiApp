<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.example.servivet.ui.main.adapter.HomeOnlineNowAdapter.ClickAction" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white">

        <View
            android:id="@+id/viewtop"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_F3F3F3"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/flower_img" />


            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/profile_image"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toplayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/finance"
                    android:textColor="@color/green"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:background="@drawable/orange_drawable_6dp"
                    android:drawableStart="@drawable/star_img"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/arrow_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:drawablePadding="5dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:src="@drawable/arraow_path"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toplayer"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:maxLines="1"
                            android:text="@string/prateek_mehta"
                            android:textColor="@color/black_2"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:id="@+id/servivetlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:maxLength="25"
                                android:text="@string/individual"
                                android:textColor="@color/grey7"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/pinLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/location_path_icon"
                                android:visibility="gone" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="5dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="7dp"
                                app:cardBackgroundColor="@color/grey_CECECE"
                                app:cardCornerRadius="22dp"
                                app:contentPadding="12dp"
                                app:strokeColor="@color/grey_CECECE"
                                app:strokeWidth="1dp">

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="@string/_1_km_away"
                                android:textSize="13dp" />


                        </LinearLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/grey_F3F3F3"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</layout>
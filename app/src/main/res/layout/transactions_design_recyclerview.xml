<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="click"
            type="com.example.servivet.ui.main.adapter.TransactionAdapter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_F8F8F8"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingBottom="23dp"
        android:paddingHorizontal="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/flower_img" />

        <LinearLayout
            android:id="@+id/info"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/profile_image"
>
            <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/prateek_mehta"
                       android:layout_below="@+id/toplayer"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black_2"
                        android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="1"
                android:maxLength="15"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/_123456789"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/info"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/_200"
            android:layout_marginTop="5dp"
            android:drawablePadding="3dp"
            android:maxLength="8"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>
</layout>